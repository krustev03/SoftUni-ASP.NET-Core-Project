@model FitnessHub.Web.ViewModels.TrainerPosts.TrainerPostInputModel

@{
    this.ViewData["Title"] = "Edit Post";
    int trainerPostId = Convert.ToInt32(this.ViewContext.HttpContext.Request.Query["trainerPostId"]);
    int pageNum = Convert.ToInt32(this.ViewContext.HttpContext.Request.Query["page"]);
}

<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 form-section text-center">
                <div class="leave-comment">
                    <h2 class="text-white form-heading-2">Edit Post</h2>
                    <form method="post" asp-action="Edit" asp-route-trainerPostId="@trainerPostId" asp-route-page="@pageNum" asp-controller="TrainerPosts">
                        <div>
                            <input asp-for="@Model.FirstName" type="text" placeholder="First Name" required>
                            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                        </div>
                        <div>
                            <input asp-for="@Model.LastName" type="text" placeholder="Last Name" required>
                            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                        </div>
                        <div>
                            <textarea asp-for="@Model.Description" type="textarea" placeholder="Description"></textarea>
                            <span asp-validation-for="@Model.Description" class="text-danger"></span>
                        </div>
                        <button type="submit" id="submit">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>