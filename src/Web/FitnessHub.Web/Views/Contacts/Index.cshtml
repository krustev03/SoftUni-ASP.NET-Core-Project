@using static FitnessHub.Common.GlobalConstants
@using System.Text
@model FitnessHub.Web.ViewModels.Contacts.ContactsInputModel

@{
    this.ViewData["Title"] = "Contact Us";
    var maxLength = MessageMaxLength;
}

<div class="row">
    <div class="container justify-content-center">
        <div class="col-md-6" id="contacts-main-div">
            <div class="form-area">
                <form asp-action="Index" asp-controller="Contacts" method="post">
                    <br id="break-line">
                    <h6 class="text-purple text-sm-center">GOT A QUESTION?</h6>
                    <h2 id="contacts-title">Contact FitnessHub</h2>
                    <div class="form-group">
                        <input asp-for="Name" type="text" class="form-control" id="name" name="name" placeholder="Name" required>
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Subject" type="text" class="form-control" id="subject" name="subject" placeholder="Subject" required>
                        <span asp-validation-for="@Model.Subject" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <textarea asp-for="Message" class="form-control" type="textarea" id="message" placeholder="Message" rows="7">
                        </textarea>
                        <span asp-validation-for="@Model.Message" class="text-danger"></span>
                        <span class="help-block"><p id="characterLeft" class="help-block ">You have reached the limit</p></span>
                    </div>

                    <button type="submit" id="submit" name="submit" class="btn btn-primary">
                        <i class="fas fa-paper-plane pr-1"></i>Submit
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @*<partial name="_ValidationScriptsPartial" />*@
    <script>
    $(document).ready(function(){
        $('#characterLeft').text('@maxLength characters left');
        $('#message').keydown(function () {
            var max = @maxLength;
            var len = $(this).val().length;
            if (len >= max) {
                $('#characterLeft').text('You have reached the limit');
                $('#characterLeft').addClass('red');
                $('#btnSubmit').addClass('disabled');
            }
            else {
                var ch = max - len;
                $('#characterLeft').text(ch + ' characters left');
                $('#btnSubmit').removeClass('disabled');
                $('#characterLeft').removeClass('red');
            }
        });
    });
    </script>
}
