@model FitnessHub.Web.ViewModels.Equipments.EditEquipmentInputModel

@{ 
    this.ViewData["Title"] = "Edit Equipment";
    int equipmentId = Convert.ToInt32(this.ViewContext.HttpContext.Request.Query["equipmentId"]);
    int pageNum = Convert.ToInt32(this.ViewContext.HttpContext.Request.Query["page"]);
}

<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 form-section text-center">
                <div class="leave-comment">
                    <h2 class="text-white form-heading-2">Edit Equipment</h2>
                    <form method="post" asp-action="Edit" asp-route-equipmentId="@equipmentId" asp-route-page="@pageNum" asp-controller="Equipments" enctype="multipart/form-data">
                        <div>
                            <input asp-for="@Model.Name" type="text" placeholder="Name" required>
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>
                        <div>
                            <input asp-for="@Model.Price" type="number" placeholder="Price" />
                            <span asp-validation-for="@Model.Price" class="text-danger"></span>
                        </div>
                        <div>
                            <textarea asp-for="@Model.Description" type="textarea" placeholder="Description"></textarea>
                            <span asp-validation-for="@Model.Description" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" id="submit">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
