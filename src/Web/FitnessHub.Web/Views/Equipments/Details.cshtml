@model FitnessHub.Web.ViewModels.Equipments.EquipmentDetailsViewModel;

@{
    this.ViewData["Title"] = "Equipment Details";
}

<main>
    <div class="text-center">
        <h3 class="details__heading"><b>Equipment Details</b></h3>
        <div class="view__chars d-flex flex-column align-items-center">
            <div class="item__image__container__details">
                <img src="@Url.Content(Model.ImageUrl)" class="w-100 h-100">
            </div>
            <h6>Name:</h6>
            <p>@Model.Name</p>
            <h6>Price:</h6>
            <p>@Model.Price lv.</p>
            <h6>Description:</h6>
            <div class="details__description">
                <p class="text-center">@Model.Description</p>
            </div>
            <div class="details__form d-flex justify-content-around">
                <form method="post" asp-controller="Equipments" asp-action="AddToCart" asp-route-id="@Model.Id">
                    <input type="submit" value="Add to cart" class="btn btn-outline-primary" />
                </form>
                <a class="btn btn-outline-primary w-25" role="button" asp-area="" asp-controller="Equipments" asp-action="Return">Return</a>
                <form method="post" asp-controller="Equipments" asp-action="Delete" asp-route-id="@Model.Id">
                    <input type="submit" value="Remove" class="btn btn-outline-danger" />
                </form>
            </div>
        </div>
    </div>
</main>