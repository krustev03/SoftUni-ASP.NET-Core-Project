@model FitnessHub.Web.ViewModels.Order.CreditCardInputValidationModel

@{
    this.ViewData["Title"] = "Card Details"; 
}

<div class="padding d-flex justify-content-center">
    <div class="row credit-card-margin">
        <div class="col-sm-12">
            <form method="post" asp-action="ThankYou" asp-controller="Orders">
                <div class="credit-card">
                    <div class="credit-card-header">
                        <strong>Credit Card</strong>
                        <small>enter your card details</small>
                    </div>
                    <div class="credit-card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label asp-for="@Model.Name"></label>
                                    <input class="form-control" type="text" asp-for="@Model.Name" placeholder="Enter your name" />
                                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="ccnumber">Credit Card Number</label>
                                    <div class="input-group">
                                        <input class="form-control" type="text" asp-for="@Model.CardNumber" placeholder="0000 0000 0000 0000" autocomplete="email">
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="far fa-credit-card"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <span asp-validation-for="@Model.CardNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4">
                                <label for="ccmonth">Month</label>
                                <select class="form-control" id="ccmonth">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                    <option>6</option>
                                    <option>7</option>
                                    <option>8</option>
                                    <option>9</option>
                                    <option>10</option>
                                    <option>11</option>
                                    <option>12</option>
                                </select>
                            </div>
                            <div class="form-group col-sm-4">
                                <label for="ccyear">Year</label>
                                <select class="form-control" id="ccyear">
                                    <option>2014</option>
                                    <option>2015</option>
                                    <option>2016</option>
                                    <option>2017</option>
                                    <option>2018</option>
                                    <option>2019</option>
                                    <option>2020</option>
                                    <option>2021</option>
                                    <option>2022</option>
                                    <option>2023</option>
                                    <option>2024</option>
                                    <option>2025</option>
                                </select>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label for="cvv">CVV/CVC</label>
                                    <input class="form-control" id="cvv" type="text" asp-for="@Model.SecurityCode" placeholder="123">
                                    <span asp-validation-for="@Model.SecurityCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <button type="submit" class="btn btn-sm btn-success float-right">Countinue</button>
                            <a class="btn btn-sm btn-danger float-left" role="button" asp-area="" asp-controller="Orders" asp-action="CardDetails">Reset</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>