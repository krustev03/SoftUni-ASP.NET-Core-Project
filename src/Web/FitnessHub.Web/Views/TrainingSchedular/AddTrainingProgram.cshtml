@model FitnessHub.Web.ViewModels.TrainingSchedular.TrainingProgramInputModel
@{ 
    this.ViewData["Title"] = "Add Training Program"; 
}

<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 form-section text-center">
                <div class="leave-comment">
                    <h2 class="text-white form-heading-2">Add Training Program</h2>
                    <form method="post" asp-action="AddTrainingProgram" asp-controller="TrainingSchedular">
                        <div>
                            <input asp-for="@Model.Name" type="text" placeholder="Name" required>
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>
                        <button type="submit" id="submit">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
