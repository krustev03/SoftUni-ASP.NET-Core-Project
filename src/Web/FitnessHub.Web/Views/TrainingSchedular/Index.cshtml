<section class="breadcrumb-section set-bg" data-setbg="img/services-banner.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>Services</h2>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="contact-section spad items-section">
    @if (Model.PagesCount == 0)
    {
        <h3 class="display-4 text-white text-center m-5"><b>No Training Programs Availabe</b></h3>
    }
    else if (Model.PagesCount < Model.PageNumber)
    {
        <h3 class="display-4 text-white text-center m-5"><b>No items in this page</b></h3>
    }
    else
    {
        <h3 class="display-4 text-white text-center m-5"><b>Page @Model.PageNumber of @Model.PagesCount</b></h3>
    }
    <div class="services__content container w-50 d-flex flex-column">
        @foreach (var trainingProgram in trainingProgramsRepo.All().Where(tp => tp.CreatorId == userId).ToList().OrderByDescending(x => x.CreatedOn))
        {
            <section class="aboutus-section item-section">
                <div class="container-fluid">
                    <div class="row text-center">
                        <div class="col-lg-12 p-0">
                            <div class="about-text text-center shop-item-sizing d-flex flex-column justify-content-center">
                                <div class="section-title text-center item-about">
                                    <span>About</span>
                                    <h2>@trainingProgram.Name</h2>
                                </div>
                                <div class="about-bar">
                                    <div class="ab-item">
                                        <h4 class="text-white">Created: @trainingProgram.CreatedOn.ToString("dd'/'MM'/'yyyy HH:mm")</h4>
                                    </div>
                                </div>
                                <div class="leave-comment">
                                    <form method="post" class="shop-item-button" asp-controller="TrainingSchedular" asp-action="Delete" asp-route-programId="@trainingProgram.Id" asp-route-page="@pageNum">
                                        <button type="submit" id="submit">Delete</button>
                                    </form>
                                    <a class="shop-item-link" role="button" asp-area="" asp-controller="TrainingSchedular" asp-action="Edit" asp-route-programId="@trainingProgram.Id" asp-route-page="@pageNum"><b>Edit</b></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        }
    </div>
    <div class="d-flex justify-content-around">
        <a class="btn btn-orange w-25 add-item" role="button" asp-area="" asp-controller="Home" asp-action="GoToHome">Go to home</a>
        <a class="btn btn-orange w-25 add-item" role="button" asp-area="" asp-controller="TrainingSchedular" asp-action="AddTrainingProgram">New Training Program</a>
    </div>
</section>

<partial name="_PagingPartial" model="@Model" />
