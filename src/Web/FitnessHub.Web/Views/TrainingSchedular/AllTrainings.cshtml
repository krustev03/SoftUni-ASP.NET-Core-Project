    <div class="jumbotron text-center col-md-4">
        <h1 class="display-4">Monday</h1>
        <hr class="my-4">
        @if (mondayTraining == null)
        {
            <p class="lead">
                <a class="btn btn-primary btn-lg" role="button" asp-area="" asp-controller="TrainingSchedular" asp-action="AddTraining">Add Training</a>
