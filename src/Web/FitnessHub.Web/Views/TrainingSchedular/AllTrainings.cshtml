@inject FitnessHub.Data.Common.Repositories.IDeletableEntityRepository<Training> trainingsRepo
@using FitnessHub.Data.Models
@{ 
    this.ViewData["Title"] = "Training Program";
    var programId = ViewContext.HttpContext.Request.Query["programId"];
    var mondayTraining = trainingsRepo.All().ToList().Where(x => x.DayOfWeek == "Monday" && x.TrainingProgramId == programId).FirstOrDefault();
    var tuesdayTraining = trainingsRepo.All().ToList().Where(x => x.DayOfWeek == "Tuesday" && x.TrainingProgramId == programId).FirstOrDefault();
    var wednesdayTraining = trainingsRepo.All().ToList().Where(x => x.DayOfWeek == "Wednesday" && x.TrainingProgramId == programId).FirstOrDefault();
    var thursdayTraining = trainingsRepo.All().ToList().Where(x => x.DayOfWeek == "Thursday" && x.TrainingProgramId == programId).FirstOrDefault();
    var fridayTraining = trainingsRepo.All().ToList().Where(x => x.DayOfWeek == "Friday" && x.TrainingProgramId == programId).FirstOrDefault();
    var saturdayTraining = trainingsRepo.All().ToList().Where(x => x.DayOfWeek == "Saturday" && x.TrainingProgramId == programId).FirstOrDefault();
    var sundayTraining = trainingsRepo.All().ToList().Where(x => x.DayOfWeek == "Sunday" && x.TrainingProgramId == programId).FirstOrDefault();
}

