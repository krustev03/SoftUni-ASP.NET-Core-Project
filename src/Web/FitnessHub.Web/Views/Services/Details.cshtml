@model FitnessHub.Web.ViewModels.Services.SuplementDetailsViewModel

@{
    this.ViewData["Title"] = "Service Details";
}

<main>
    <div class="text-center">
        <h3 class="details__heading"><b>Service Details</b></h3>
        <div class="view__chars d-flex flex-column align-items-center">
            <h6>Name:</h6>
            <p>@Model.Name</p>
            <h6>Price:</h6>
            <p>@Model.Price lv.</p>
            <h6>Description:</h6>
            <div class="details__description">
                <p class="text-center">@Model.Description</p>
            </div>
            <form method="post" asp-controller="Services" asp-action="Delete" asp-route-id="@Model.Id">
                <input type="submit" value="Remove" class="btn btn-danger" />
            </form>
        </div>
    </div>
</main>