@model FitnessHub.Web.ViewModels.Services.ServiceInputModel

@{ 
    this.ViewData["Title"] = "Edit Service"; 
}

<main>
    <div class="text-center">
        <h3 class="add__heading"><b>Edit Service</b></h3>
        <div class="form__inputs">
            <form class="d-flex flex-column" method="post" asp-action="Edit" asp-controller="Services">
                <div class="form-group">
                    <label asp-for="@Model.Name"></label>
                    <input class="form-control" type="text" asp-for="@Model.Name" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Price"></label>
                    <input class="form-control" type="number" asp-for="@Model.Price" step="any" />
                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Description"></label>
                    <textarea class="form-control" asp-for="@Model.Description"></textarea>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Edit</button>
                </div>
            </form>
        </div>
    </div>
</main>
