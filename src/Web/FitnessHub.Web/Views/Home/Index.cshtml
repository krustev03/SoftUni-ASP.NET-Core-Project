@using FitnessHub.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@{
    this.ViewData["Title"] = "Home Page";
}

<section class="hero-section">
    <div class="hs-slider owl-carousel">
        <div class="hs-item set-bg" data-setbg="images/hero/hero-1.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 offset-lg-6">
                        <div class="hi-text">
                            <span>Shape your body</span>
                            <h1>Be <strong>strong</strong> traning hard</h1>
                            <a class="primary-btn" asp-area="" asp-controller="News" asp-action="Index" asp-route-page="1">See News</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="hs-item set-bg" data-setbg="images/hero/hero-2.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 offset-lg-6">
                        <div class="hi-text">
                            <span>Shape your body</span>
                            <h1>Be <strong>strong</strong> traning hard</h1>
                            <a class="primary-btn" asp-area="" asp-controller="News" asp-action="Index" asp-route-page="1">See News</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="classes-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Our Site</span>
                    <h2>WHAT WE CAN OFFER</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="class-item">
                    <div class="ci-pic">
                        <img src="images/classes/class-supplements.jpg" alt="">
                    </div>
                    <div class="ci-text">
                        <span>FITNESS</span>
                        <h5>Supplements</h5>
                        <a asp-area="" asp-controller="Suplements" asp-action="Index" asp-route-page="1"><i class="fa fa-angle-right"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="class-item">
                    <div class="ci-pic">
                        <img src="images/classes/class-2.png" alt="">
                    </div>
                    <div class="ci-text">
                        <span>FITNESS</span>
                        <h5>Equipments</h5>
                        <a asp-area="" asp-controller="Equipments" asp-action="Index" asp-route-page="1"><i class="fa fa-angle-right"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="class-item">
                    <div class="ci-pic">
                        <img src="images/classes/class-3.jpg" alt="">
                    </div>
                    <div class="ci-text">
                        <span>FITNESS</span>
                        <h5>Trainers</h5>
                        <a asp-area="Trainer" asp-controller="TrainerPosts" asp-action="Index" asp-route-page="1"><i class="fa fa-angle-right"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="class-item">
                    <div class="ci-pic">
                        <img src="images/classes/class-4.jpg" alt="">
                    </div>
                    <div class="ci-text">
                        <span>CHAT</span>
                        <h4>Platform</h4>
                        <a asp-area="" asp-controller="Chat" asp-action="Index"><i class="fa fa-angle-right"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="class-item">
                    <div class="ci-pic">
                        <img src="images/classes/class-training-schedular.jpg" alt="">
                    </div>
                    <div class="ci-text">
                        <span>TRAINING</span>
                        <h4>Schedular</h4>
                        <a asp-area="" asp-controller="TrainingSchedular" asp-action="Index" asp-route-page="1"><i class="fa fa-angle-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@if (this.SignInManager.IsSignedIn(this.User))
{
    <section class="banner-section set-bg" data-setbg="images/banner-bg.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="bs-text">
                        <h2>Thank you for your registration</h2>
                        <h2>Now you are one of us!</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <section class="banner-section set-bg" data-setbg="images/banner-bg.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="bs-text">
                        <h2>register now to get started</h2>
                        <a asp-area="Identity" asp-page="/Account/Register" class="primary-btn  btn-normal">Register</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
